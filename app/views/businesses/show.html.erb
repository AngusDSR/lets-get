<div class="h-15 border border-1 bg-light">
  map
  map
</div>

<div class="mt-2 container flex-column rounded">
  <div class="d-flex flex-column p-3 business-show-card rounded">
    <%= image_tag Business::PHOTO_ROUTE + @business.image_url + Business::SHOW_PARAMS, alt: @business.name, class: "mb-2" %>
    <div class="d-flex flex-row justify-content-between">
      <h2 class="mb-3 fw-bold"><%= @business.name %></h2>
      <p class="category"><%= @business.category.gsub('_',' ') %></p>
    </div>
     <p><%= icon('fa-solid', 'star') * @business.rating.divmod(1)[0].round(0.5) %></p>
    <p><%= icon('fa-solid', 'star-half') * @business.rating.divmod(1)[1].round(0.5) %></p>
    <p><%= @business.description.gsub('_',' ') %>.</p>
    <%# THIS NEEDS TO LINK TO THE MEET SHOW %>
    <%= button_to "link bus to meet", :method=> "someButton" %>
    <%= link_to meet_path(@meet), class: "btn btn-sm bg-black text-white rounded fs-3 mt-2" do %>
      <p class="d-inline me-3">Go here</p>
      <%= icon('fa-solid', 'location-arrow') %>
    <% end %>
    <sup class="mt-4 text-center "><%= @business.street_address %></sup>

    </div>
</div>
