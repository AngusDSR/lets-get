<div class="py-2 navbar navbar-expand-sm navbar-light navbar-lewagon p-0">
  <div class="container-fluid container-nav">
    <% if controller_name == 'meets' && action_name == 'new' %>
      <span><%= link_to icon('fa-solid', 'arrow-left', class:"icon-nav opacity-0"), url_for(:back) %></span>
    <% elsif controller_name == 'meet' && action_name == 'show' %>
      <%# this one should be different: needs to go back to the meet/businesses %>
      <span><%= link_to icon('fa-solid', 'arrow-left', class:"icon-nav opacity-0"), url_for(:back) %></span>
    <% else %>
      <span><%= link_to icon('fa-solid', 'arrow-left', class:"icon-nav icon-arrow text-black"), url_for(:back) %></span>
    <% end %>

    <%= link_to root_path, class: "mt-1 text-decoration-none" do %>
      <h1 class="app-title">Let's Get</h1>
    <% end %>
    <div class="" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto border-danger">
        <% if user_signed_in? %>

          <li class="nav-item dropdown">
            <%= link_to icon('fa-solid', 'circle-user', class:"icon-nav icon-login text-black"), '#', id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "p-0 item-logout dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="d-flex flex-column justify-content-end">
            <%= link_to icon('fa-regular', 'circle-user', class:"icon-nav text-black"), new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
