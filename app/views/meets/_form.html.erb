<div data-controller="enter-locations">
  <div class="container d-flex flex-column">
        <%# <%= render "locate_icon" %> %>
      <div class="align-items-center">
        <input required type="text"
          id=userlocation name="userlocation" aria-label="userlocation" placeholder="Where are you?"
          class="input-location" required
          data-enter-locations-target="userlocation"
          data-action="input->enter-locations#userSuggestions"
        >
        <%= render "cross_icon" %>
        <div class="results-container" data-enter-locations-target="suggestionscontainer"></div>

        <input required type="text"
          id=friendlocation name="friendlocation" placeholder="Where's your friend?"
          class="input-location" required
          data-enter-locations-target="friendlocation"
          data-action="input->enter-locations#friendSuggestions"
        >
        <div class="results-container" data-enter-locations-target="friendsuggestionscontainer"></div>
      </div>

    [hidden simple form here]
    <%= simple_form_for @meet, html: { class: ""} do |f| %>
      <%= f.input :name, input_html: { "data-enter-locations-target" => "meetname" }  %>
      <%= f.input :start_point_lat, input_html: { "data-enter-locations-target" => "startlat" } %>
      <%= f.input :start_point_long, input_html: { "data-enter-locations-target" => "startlong" } %>
      <%= f.input :friend_lat, input_html: { "data-enter-locations-target" => "friendlat" } %>
      <%= f.input :friend_long, input_html: { "data-enter-locations-target" => "friendlong" } %>
      <%= f.input :midpoint_lat %>
      <%= f.input :midpoint_long %>
      <%= f.input :directions %>
      <%= f.input :radius %>
      <%= f.input :active %>
      <%# NO SUBMIT, BUTTON, USE STIMULUS FOR THIS %>
    <% end %>
  </div>
</div>
