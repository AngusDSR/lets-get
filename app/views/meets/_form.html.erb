<div data-controller="enter-locations">
  <div class="container d-flex flex-column">
    [hidden simple form here]
    <%= simple_form_for @meet, html: { class: "d-none"} do |f| %>
      <%= f.input :name %>
      <%= f.input :start_point_long %>
      <%= f.input :start_point_lat %>
      <%= f.input :friend_long %>
      <%= f.input :friend_lat %>
      <%= f.input :midpoint_long %>
      <%= f.input :midpoint_lat %>
      <%= f.input :directions %>
      <%= f.input :radius %>
      <%= f.input :active %>
      <%# NO SUBMIT, BUTTON, USE STIMULUS FOR THIS %>
    <% end %>

    <div class="align-items-center">
      <%= render "locate_icon" %>
      <input required type="text"
        id=userlocation name="userlocation" aria-label="userlocation" placeholder="Where are you?"
        class="input-location" required
        data-enter-locations-target="userlocation"
        data-action="input->enter-locations#suggestions"
      >
      <%= render "cross_icon" %>
      <div class="results-container"
        data-enter-locations-target="suggestionscontainer">
      </div>

      <input required type="text"
        id=search name="location" placeholder="Where's your friend?"
        class="input-location" required name="street-address"
      >
    </div>
  </div>
</div>
