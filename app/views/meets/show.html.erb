<div data-controller="meet-show-map"
  data-meet-show-map-business-value="<%= { lat: @meet.business.latitude, lng: @meet.business.longitude }.to_json %>"
>
  <div class="container">
    <div class="mt-2 px-2 py-3 card-directions">
      <h4 class="mb-3 fw-bold"><%= @name %></h4>
      <div class="map-container-meet-show">
        <%= render "meet_show_map" %>
        <div class="d-flex flex-row justify-content-between align-items-baseline mt-1 p-1">
          <div>
            <% @meet.modes.each do |mode| %>
              <%= image_tag "#{mode.downcase}.png", class: "travel-icon" unless mode.size == 0 %>
            <% end %>
          </div>
          <p class="m-0 my-0 me-2 fs-5 fw-bold"><%= @meet.duration %></p>
        </div>
      </div>
      <div class="d-flex flex-column justify-content-baseline mt-2">
        <div class="container directions-container p-1 rounded">
          <% @directions_parsed.each do |step| %>
            <p class="m-1"><%= step %></p>
            <hr class="m-0 mx-1 bg-dark">
          <% end %>
        </div>
      </div>
      <div class="d-flex flex-column">
        <%= link_to "whatsapp://send?text=#{@whatsapp_directions}", class: "btn-go btn btn-lg bg-black text-center m-2" do %>
          <p class="d-inline me-1 px-1 fw-bold btn-font">Share friend's directions</p>
          <%= icon('fa-brands', 'whatsapp', class:"icon-whastsapp") %>
        <% end %>
      </div>
    </div>
  </div>
</div>
